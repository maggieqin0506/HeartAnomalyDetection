<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoring..."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/chestPainTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chest Pain Type: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/restingBPTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resting BP: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cholesterolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cholesterol: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fastingBSTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasting Blood Sugar: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/restingECGTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resting ECG: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/maxHRTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Heart Rate: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/exerciseAnginaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Angina: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/oldpeakTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oldpeak: Waiting for data..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/stSlopeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ST Slope: Waiting for data..."
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/emergencyAlertImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:src="@drawable/heart"
        android:visibility="gone" />

    <!-- Optional TextView for alert message -->
    <TextView
        android:id="@+id/emergencyAlertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyAlertImage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Emergency: Heart Attack Alert!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>
